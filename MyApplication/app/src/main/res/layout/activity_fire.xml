<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/abg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/optionRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-100dp">

        <RadioButton
            android:id="@+id/option1RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/border"
            android:textColor="@color/white"
            android:padding="5dp"
            android:text="NO NEED FIRE"
            android:textAlignment="center"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/option2RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-240dp"
            android:layout_marginTop="270dp"
            android:padding="5dp"
            android:background="@drawable/border"
            android:textColor="@color/white"
            android:text="NEEED   FIRE"
            android:textAlignment="center"
            android:textSize="30sp" />

    </RadioGroup>

    <Button
        android:id="@+id/sosButtonf"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/optionRadioGroup"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/oval_shape"
        android:gravity="center"
        android:text="EMERGENCY"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/contactTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sosButtonf"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="67dp"
        android:background="@drawable/lavender_border"
        android:text="@string/press_the_sos_button"
        android:textSize="18sp"
        tools:ignore="TextSizeCheck" />
</RelativeLayout>
